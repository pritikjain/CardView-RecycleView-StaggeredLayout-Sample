<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pritikjain.android.sample.cardview_recycleview_staggeredlayout_sample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutManagerActivity"
            android:label="@string/title_activity_linear_layout_manager" >
        </activity>
        <activity
            android:name=".GridLayoutManagerActivity"
            android:label="@string/title_activity_grid_layout_manager" >
        </activity>
        <activity
            android:name=".StaggeredGridLayoutManagerActivity"
            android:label="@string/title_activity_staggered_grid_layout_manager" >
        </activity>
    </application>

</manifest>
